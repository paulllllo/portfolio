extends ../base.pug

block variables
    - var template = 'details'

block content
    .details
        .nav_bar
            .nav_switch

            span.home_name_tag=navigation.data.name

            .nav_status_box
                p.nav_status_text=`${navigation.data.availability ? 'Available to work since' : 'Available to work from'}`
                    span="15th September"
                .nav_profile_media
                    img.nav_profile_media_image(alt=profile.data.profile_picture.alt, data-src=profile.data.profile_picture.url)


        .details_wrapper
            .details_content
                h2.details_content_title=project.data.title

                .details_content_media
                    img.details_content_media_image(alt=project.data.image.alt, src=project.data.image.url)

                p.details_desc=project.data.description

            .details_details
                each detail in project.data.details
                    - for (const key in detail)
                        .details_detail
                            span.details_detail_title=key

                            p.details_detail_desc=detail[key]

        .footer
            .footer_content
                h3.footer_content_title="Let's talk"

                p.footer_content_desc="I love to create impactful experiences which your users would love"

            .footer_socials
                - for (const social in socials.data)
                    .footer_social
                        .footer_social_icon
                        
                        span=socials.data[social].link
