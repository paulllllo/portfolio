extends ../base.pug

block variables
    - var template = 'home'

block content
    .home
        .nav_bar
            .nav_switch

            span.home_name_tag="Odigbo Kelechi"

            .home_status_box
                p.home_status_text="Available to work since"
                    span="15th September"
                .home_profile_media
                    img.home_profile_media_image(alt=placeholder, data-src=placeholder)

        .home_wrapper
            .home_hero
                .home_hero_wrapper
                    .home_hero_media
                    .home_hero_text
                .home_hero_button
                    p.home_hero_button_text

            .home_works
                .home_works_wrapper
                    .home_works_slider
                        each work in placeholder
                            .home_works_slider_media
                                img.home_works_slider_media_image(alt=placeholder, src=placeholder)

                        .home_works_slider_next
                    
                    .home_works_title
                        spam.home_works_title_text


